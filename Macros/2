CREATE TABLE IF NOT EXISTS tbl_Campana(Id INT PRIMARY KEY NOT NULL,Nombre VARCHAR(100) UNIQUE KEY NOT NULL,FOTO VARCHAR(105) default NULL)
CREATE TABLE IF NOT EXISTS tbl_Campana_Campo(Id INT PRIMARY KEY NOT NULL,Id_Campana INT NOT NULL,Nombre VARCHAR(50) NOT NULL,Visible BOOL,UNIQUE KEY(Id_Campana, Nombre))
CREATE TABLE IF NOT EXISTS tbl_Campana_Colores(Id INT PRIMARY KEY NOT NULL,Id_Campana INT UNIQUE KEY NOT NULL,Fondo VARCHAR(25) NOT NULL,Historicos VARCHAR(25) NOT NULL,Encabezado VARCHAR(25) NOT NULL,Titulos VARCHAR(25) NOT NULL)
CREATE TABLE IF NOT EXISTS tbl_Registro(Id INT PRIMARY KEY NOT NULL,Id_Campana INT NOT NULL,LLAVE varchar(22) default NULL,Saldoact varchar(150) default NULL,CLIENTE varchar(150) default NULL,CUENTA varchar(150) default NULL,CELULAR varchar(150) default NULL,TEL1 varchar(150) default NULL,TEL2 varchar(150) default NULL,TEL3 varchar(150) default NULL,SALDO varchar(150) default NULL,DESCUENTO varchar(150) default NULL,SALDONUM varchar(150) default NULL,ASIG varchar(150) default NULL,REGION varchar(150) default NULL,REFERENCIA varchar(150) default NULL,ORD varchar(150) default NULL,IVR varchar(150) default NULL,HORA varchar(150) default NULL,EXTRA varchar(150) default NULL,RESULTADOH varchar(150) default NULL,RESULTADOH2 varchar(150) default NULL,Contacto varchar(150) default NULL,RFC varchar(150) default NULL,REF_DIRECCION varchar(150) default NULL,DIR1 varchar(150) default NULL,DIR2 varchar(150) default NULL,DIR3 varchar(150) default NULL,CP varchar(150) default NULL,CIUDAD varchar(150) default NULL,TELEF1 varchar(150) default NULL,EXT1 varchar(150) default NULL,TELEF2 varchar(150) default NULL,EXT2 varchar(150) default NULL,TELEF3 varchar(150) default NULL,EXT3 varchar(150) default NULL,TELEF4 varchar(150) default NULL,EXT4 varchar(150) default NULL,F_ADEUDO varchar(150) default NULL,AVAL varchar(150) default NULL,FIANZA varchar(150) default NULL,RECLAMACION varchar(150) default NULL,F_CARGA varchar(150) default NULL,FULLTEXT(LLAVE)) ENGINE=MyISAM
CREATE TABLE IF NOT EXISTS tbl_Calificacion_Registro(Id INT PRIMARY KEY NOT NULL,Campana VARCHAR(100)default NULL,LLAVE varchar(22) default NULL,CUENTA varchar(150) default NULL,ASIG varchar(150) default NULL,IVR varchar(150) default NULL,CELULAR varchar(150) default NULL,Cve_Gestion INT NOT NULL,Comentario VARCHAR(1000) NOT NULL,Extra VARCHAR(1000) NOT NULL,Fecha DATETIME NOT NULL)
CREATE TABLE IF NOT EXISTS tbl_Pago_Registro(Id INT PRIMARY KEY NOT NULL,Id_Registro INT NOT NULL,Pago VARCHAR(150) NOT NULL,Fecha VARCHAR(150) NOT NULL)					
CREATE TABLE IF NOT EXISTS tbl_Campana_Campo_Registro(Id INT PRIMARY KEY NOT NULL,Id_Campana_Campo INT NOT NULL,Id_Registro INT NOT NULL,Valor VARCHAR(1000),UNIQUE KEY(Id_Campana_Campo, Id_Registro))