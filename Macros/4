CREATE TABLE IF NOT EXISTS tbl_Campana(Id INT PRIMARY KEY NOT NULL,Nombre VARCHAR(100) UNIQUE KEY NOT NULL,FOTO VARCHAR(105) default NULL)
CREATE TABLE IF NOT EXISTS tbl_Campana_Campo(Id INT PRIMARY KEY NOT NULL,Id_Campana INT NOT NULL,Nombre VARCHAR(50) NOT NULL,Visible BOOL,UNIQUE KEY(Id_Campana, Nombre))
CREATE TABLE IF NOT EXISTS tbl_Campana_Colores(Id INT PRIMARY KEY NOT NULL,Id_Campana INT UNIQUE KEY NOT NULL,Fondo VARCHAR(25) NOT NULL,Historicos VARCHAR(25) NOT NULL,Encabezado VARCHAR(25) NOT NULL,Titulos VARCHAR(25) NOT NULL)
CREATE TABLE IF NOT EXISTS tbl_Registro(Id INT PRIMARY KEY NOT NULL,Id_Campana INT NOT NULL,LLAVE varchar(22) default NULL,Cuenta varchar(150) default NULL,CUENTA_TRANSCODIFICADA varchar(150) default NULL,SALDO_ACTUAL varchar(150) default NULL,BUCKET varchar(150) default NULL,CORTE varchar(150) default NULL,CR_RATING varchar(150) default NULL,CASTIGO varchar(150) default NULL,APERTURA varchar(150) default NULL,ULTIMO_PAGO varchar(150) default NULL,ULTIMA_COMPRA varchar(150) default NULL,ULTIMO_RETIRO varchar(150) default NULL,LIMITE_CREDITO varchar(150) default NULL,SOBREGIRO varchar(150) default NULL,SALDO_ANTERIOR varchar(150) default NULL,MONTO_VENCIDO varchar(150) default NULL,DIAS_COBRANZA varchar(150) default NULL,OTRA_CUENTA varchar(150) default NULL,NOMBRE varchar(150) default NULL,RFC varchar(150) default NULL,CALLE_Y_NUM varchar(150) default NULL,COLONIA varchar(150) default NULL,CIUDAD varchar(150) default NULL,CP varchar(150) default NULL,TEL_CASA varchar(150) default NULL,TEL_OFICINA varchar(150) default NULL,CELULAR varchar(150) default NULL,EMAIL varchar(150) default NULL,TRABAJO varchar(150) default NULL,Agencia varchar(150) default NULL,Burs varchar(150) default NULL,NOMBRE_EMPLEO varchar(150) default NULL,CALLE varchar(150) default NULL,NOEXTERIOR varchar(150) default NULL,NOINTERIOR varchar(150) default NULL,COLONIA2 varchar(150) default NULL,CPOSTAL varchar(150) default NULL,consolidadado_chrge_off_CHARAL_lay3_TELEFONO varchar(150) default NULL,EXTENSION varchar(150) default NULL,NOMBRE_REF varchar(150) default NULL,APATERNO_REF varchar(150) default NULL,AMATERNO_REF varchar(150) default NULL,TELEFONO_REF varchar(150) default NULL,NOMBRE_REF2 varchar(150) default NULL,APATERNO_REF2 varchar(150) default NULL,AMATERNO_REF2 varchar(150) default NULL,TELEFONO_REF2 varchar(150) default NULL,NOMBRE_REF3 varchar(150) default NULL,APATERNO_REF3 varchar(150) default NULL,AMATERNO_REF3 varchar(150) default NULL,TELEFONO_REF3 varchar(150) default NULL,AGENTE varchar(150) default NULL,NO_ASIGNACION varchar(150) default NULL,FECHA_ASIG varchar(150) default NULL,STATUS varchar(150) default NULL,BANCO varchar(150) default NULL,UDATE varchar(150) default NULL,TIPO varchar(150) default NULL,SUBTIPO varchar(150) default NULL,DESCUENTO varchar(150) default NULL,HONORARIO varchar(150) default NULL,Bucket_asig varchar(150) default NULL,CAMPO_EXTRA1 varchar(150) default NULL,CAMPO_EXTRA2 varchar(150) default NULL,CAMPO_EXTRA3 varchar(150) default NULL,FULLTEXT(LLAVE)) ENGINE=MyISAM
CREATE TABLE IF NOT EXISTS tbl_Calificacion_Registro(Id INT PRIMARY KEY NOT NULL,Campana VARCHAR(100)default NULL,LLAVE varchar(22) default NULL,Cuenta varchar(150) default NULL,Cve_Gestion INT NOT NULL,Comentario VARCHAR(1000) NOT NULL,Extra VARCHAR(1000) NOT NULL,Fecha DATETIME NOT NULL)
CREATE TABLE IF NOT EXISTS tbl_Pago_Registro(Id INT PRIMARY KEY NOT NULL,Id_Registro INT NOT NULL,Pago VARCHAR(150) NOT NULL,Fecha VARCHAR(150) NOT NULL)					
CREATE TABLE IF NOT EXISTS tbl_Campana_Campo_Registro(Id INT PRIMARY KEY NOT NULL,Id_Campana_Campo INT NOT NULL,Id_Registro INT NOT NULL,Valor VARCHAR(1000),UNIQUE KEY(Id_Campana_Campo, Id_Registro))